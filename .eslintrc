{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "extraFileExtensions": [
      ".ts",
      ".tsx",
      ".jsx",
      ".js"
    ]
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "prettier"
  ],
  "extends": [
    "prettier",
    "prettier/@typescript-eslint",
    "prettier/react",
    "eslint-config-ali/typescript/react"
  ],
  "rules": {
    "react/prop-types": 0,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 120,
        "trailingComma": "all"
      }
    ],
    "import/prefer-default-export": 0,
    "max-len": [
      "error",
      {
        "code": 120
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "globals": {
    "Promise": true,
    "require": true
  }
}
