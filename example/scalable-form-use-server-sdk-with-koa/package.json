{
  "name": "scalable-form-use-server-sdk-with-koa",
  "version": "0.0.1",
  "private": true,
  "description": "Scalable Form 使用 Koa 站点的demo",
  "homepage": "",
  "license": "MIT",
  "main": "src/index.ts",
  "typings": "src/index.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "dev": "nodemon --watch 'src/**/*' --watch '../../packages/xform-server/src/**/*'  -e ts,tsx --exec 'npm run dev:build && npm run dev:run'",
    "dev:build": "cross-env NODE_ENV=development webpack --config webpack.config.babel.js --colors",
    "dev:run": "node ./dist/index.js",
    "start": "exit 0",
    "stop": "exit 0",
    "test": "exit 0",
    "build": "exit 0",
    "publish": "exit 0"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "tea-platform": "<rootDir>/__mocks__/styleMock.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageReporters": [
      "clover",
      "html"
    ],
    "reporters": [
      "default",
      "jest-simple-summary"
    ],
    "collectCoverage": true
  },
  "dependencies": {
    "cross-env": "^6.0.3",
    "koa": "^2.11.0",
    "scalable-form-server": "^0.0.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/register": "^7.4.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.3",
    "nodemon": "^1.19.4",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0"
  }
}
